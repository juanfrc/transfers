<%= form_for @transfer do |f| %>
  <p>
    <%= f.label :sender_id %><br>
    <%= f.collection_select(:sender_id, User.all, :id, :name)%>

  </p>

  <p>
    <%= f.label :amount %><br>
    <%= f.number_field :amount %>
  </p>

  <p>
    <%= f.label :receiver_id %><br>
    <%= f.collection_select(:receiver_id, User.all, :id, :name)%>

  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>